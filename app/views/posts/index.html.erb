<h1>글 목록 보기</h1>
<a href="/posts/new">게시글 작성하기</a>
<hr>
<% @posts.each do |post| %>
<p>
    <%= post.id %>
</p>
<p>
    <%= post.title %>
</p>
<p>
    <%= post.content %>
</p>
<p>
    <%= post.created_at %>
</p>
<p>
    <%= post.updated_at %>
</p>

<%= link_to 'Edit', edit_post_path(post) %> 
<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', posts_path %>

<hr />
<% end %>